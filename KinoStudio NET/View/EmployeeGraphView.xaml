<Window x:Class="KinoStudio_NET.View.EmployeeGraphView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:viewModel="clr-namespace:KinoStudio_NET.ViewModel"
        mc:Ignorable="d"
        Title="График сотрудников" MinHeight="450" MinWidth="450">
    <Window.DataContext>
        <viewModel:EmployeeGraphViewModel />
    </Window.DataContext>
    <Grid>
        <wpf:CartesianChart Series="{Binding Series}" LegendLocation="Right">
            <wpf:CartesianChart.AxisX>
                <wpf:Axis Title="Возраст" LabelFormatter="{Binding}">
                    <wpf:Axis.Separator>
                        <wpf:Separator Step="1" />
                    </wpf:Axis.Separator>
                </wpf:Axis>
            </wpf:CartesianChart.AxisX>
            <wpf:CartesianChart.AxisY>
                <wpf:Axis Title="Количество человек" LabelFormatter="{Binding }" MaxValue="{Binding MaxValue}" />
            </wpf:CartesianChart.AxisY>
        </wpf:CartesianChart>
    </Grid>
</Window>